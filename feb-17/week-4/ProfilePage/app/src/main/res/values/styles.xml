<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!--common button-->
    <!--start-->
    <style name="button">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--stop-->

    <!--common radio_button-->
    <!--start-->
    <style name="radio_button">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:layout_weight">1</item>
        <item name="android:checked">false</item>
    </style>
    <!--stop-->

    <!--common red_star-->
    <!--start-->
    <style name="redStar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ce4242</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--stop-->

    <style name="errorLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">-10dp</item>
        <item name="android:layout_marginTop">-3dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--common edit_text-->
    <!--start-->
    <style name="edit_text">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/rectangle_border_edittext</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#393939</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--stop-->

    <!--common text_view-->
    <!--start-->
    <style name="text_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--stop-->

    <color name="button_text">#08b49b</color>
    <color name="white">#FFFFFF</color>
</resources>
