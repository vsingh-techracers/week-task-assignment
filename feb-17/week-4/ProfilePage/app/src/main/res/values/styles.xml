<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="frontButton">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@color/colorButton</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="redStar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ce4242</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="errorLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">-10dp</item>
        <item name="android:layout_marginTop">-3dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="email_et">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/rectangle_border_edittext</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">100</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#393939</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="username_et">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/rectangle_border_edittext</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">100</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#393939</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
