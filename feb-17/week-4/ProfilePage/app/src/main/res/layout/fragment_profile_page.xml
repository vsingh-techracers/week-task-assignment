<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/medium_margin"
    android:orientation="vertical"
    android:id="@+id/root_container"
    android:background="@color/backgroundColor"
    android:gravity="start">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_gravity="center">
        <LinearLayout
            android:id="@+id/add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">
            <android.support.v7.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:elevation="12dp"
                app:cardCornerRadius="40dp"
                android:background="@color/black"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9">
                <LinearLayout
                    android:id="@+id/dummy_pic_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/medium_img_size"
                        android:layout_height="@dimen/medium_img_size"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:src="@drawable/user_profile_img" />
                    <TextView
                        android:textSize="@dimen/very_small_text"
                        android:layout_marginTop="@dimen/neg_medium_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_img"/>
                </LinearLayout>

                <ImageView
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_height="140dp"
                    android:layout_width="140dp"
                    android:id="@+id/profile_pic"
                    android:src="@drawable/user_profile_img">
                </ImageView>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </FrameLayout>
    <EditText
        android:id="@+id/user_name"
        android:hint="@string/name_text"
        android:inputType="text"
        android:maxLength="150"
        style="@style/edit_text">
        <requestFocus/>
    </EditText>
    <TextView
        android:id="@+id/user_name_text"
        android:text=""
        style="@style/text_view"/>

    <EditText
        android:id="@+id/user_email"
        android:hint="@string/email_text"
        android:inputType="textEmailAddress"
        android:maxLength="150"
        style="@style/edit_text">
    </EditText>
    <TextView
        android:id="@+id/user_email_text"
        android:text=""
        style="@style/text_view"/>

    <EditText
        android:id="@+id/user_mob"
        android:hint="Mob no (10 digits only)"
        android:inputType="phone"
        android:maxLength="10"
        style="@style/edit_text">
    </EditText>
    <TextView
        android:id="@+id/user_mob_text"
        android:text=""
        style="@style/text_view"/>

    <EditText
        android:id="@+id/user_dob"
        android:hint="DOB (mm/dd/yyyy)"
        android:inputType="date"
        android:maxLength="10"
        style="@style/edit_text">
    </EditText>
    <TextView
        android:id="@+id/user_dob_text"
        android:text=""
        style="@style/text_view"/>

    <LinearLayout
        android:id="@+id/gender_error_layout"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/neg_medium_margin"
        style="@style/errorLayout">
        <TextView
            android:text="* "
            style="@style/redStar"/>
        <TextView
            android:id="@+id/gender_error"
            android:text=""
            style="@style/redStar"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gender_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:paddingLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text" />
        <RadioGroup
            android:id="@+id/gender_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <requestFocus/>
            <RadioButton
                android:id="@+id/gender_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Female"
                style="@style/radio_button"/>
            <RadioButton
                android:id="@+id/gender_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Male"
                style="@style/radio_button"/>
        </RadioGroup>
    </LinearLayout>
    <TextView
        android:id="@+id/user_gender_text"
        android:text=""
        style="@style/text_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            style="@style/button">
        </Button>
        <Button
            android:visibility="gone"
            android:id="@+id/edit_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Again"
            style="@style/button">
        </Button>
    </LinearLayout>
</LinearLayout>
